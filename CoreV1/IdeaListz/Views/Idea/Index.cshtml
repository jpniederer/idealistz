@model IdeaViewModel
@using Humanizer

@{
  ViewData["Title"] = "Manage Your Ideas";
}

<div class="panel panel-default idea-panel">
  <div class="panel-heading">@ViewData["Title"]</div>

  @foreach (var idea in Model.Ideas)
  {
    <div>
      <h3>@idea.Title</h3>
      <p>@idea.Description</p>
      <p>@idea.CreateTime.Humanize()</p>
    </div>
  }

  <div class="panel-footer add-item-form">
    <form>
      <div id="add-idea-error" class="text-danger"></div>
      <label for="add-idea-title">Add an Idea:</label>
      <input id="add-idea-title">
      <div>
        <label for="add-idea-description"></label>
        <textarea id="add-idea-description" placeholder="Add a description"></textarea>
      </div>
      <button type="button" id="add-idea-button">Add</button>
    </form>
  </div>

</div>